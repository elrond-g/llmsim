{
  // 设备类型: gpu, xpu, accelerator
  device_type: "gpu",

  // 硬件名称 (GB200 NVL72)
  name: "NVIDIA GB200",

  // 显存配置
  memory: {
    // HBM 显存大小 (单位: GB)
    hbm_size_gb: 192,
    // Cache 行大小 (单位: Bytes)
    cache_line_size: 128,
  },

  // 带宽配置 (单位: GB/s)
  bandwidth: {
    // HBM 带宽 (GB/s)
    hbm_bandwidth_gb_s: 8.0,
    // DMA 带宽 - 扩展(prefill)模式
    dma_bandwidth_gb_s: 180.0,
    // DMA 带宽 - 解码(decode)模式
    dma_bandwidth_decode_gb_s: 30.0,

    // 机内通信 - Link 带宽 (NVLink)
    link_bandwidth_gb_s: 1800.0,
    link_bandwidth_decode_gb_s: 40.0,

    // 机间通信 - RDMA 带宽
    rdma_bandwidth_gb_s: 300.0,
    rdma_bandwidth_decode_gb_s: 40.0,
  },

  // 计算性能配置 (单位: TFLOPS)
  compute: {
    // INT8 MAC 性能 (FP8)
    mac_int8_gflops: 5000.0,
    // FP32 MAC 性能
    mac_fp32_gflops: 2500.0,
    // BF16/FP16 MAC 性能
    mac_bf16_gflops: 2500.0,
  },
}
